{
    "manifest_version": 2,

    "name": "Siga Helper",
    "short_name": "SigaHelper",
    "version": "5.4.5",

    "description": "Extensión que agrega una serie de features sobre la web de la UTN - FRBA.",
    "author": "Pablo Matías Gomez",

    "icons": {
        "16": "images/icons/icon16.png",
        "48": "images/icons/icon48.png",
        "128": "images/icons/icon128.png"
    },

    "content_scripts": [
        {
            "matches": [
                "*://*.siga.frba.utn.edu.ar/*"
            ],
            "js": [
                "js/siga-helper.min.js"
            ],
            "css": [
                "css/siga-helper.css"
            ]
        },
        {
            "matches": [
                "*://*.guarani.frba.utn.edu.ar/*"
            ],
            "js": [
                "js/guarani-helper.min.js"
            ],
            "css": [
                "css/guarani-helper.css"
            ]
        },
        {
            "matches": [
                "*://*.kolla.frba.utn.edu.ar/*"
            ],
            "js": [
                "js/guarani-kolla-helper.min.js"
            ],
            "css": [
                "css/guarani-helper.css"
            ],
            "all_frames": true
        }
    ],
    "web_accessible_resources": [
        "js/pdf.worker.min.js"
    ],

    "background": {
        "scripts": [
            "js/background.js"
        ],
        "persistent": false
    },

    "permissions" : [
        "storage",
        "*://*.frba.utn.edu.ar/*"
    ]
}

